      "Edit(**/*credentials*)",
      "Edit(**/*secrets*)",
      "Bash(rm -rf:*)",
      "Bash(git push --force:*)",
      "Bash(git reset --hard:*)"
    ],
    "defaultMode": "acceptEdits"
  }
